<h1>Items#index</h1>
<h3>available items</h3>
<table>
  <% @items.each do |item| %>
    <tr>
      <td><%= link_to item.name, item_path(item) %></td>
      <td><%= button_to 'Edit', edit_item_path(item), method: 'get'%></td>
      <td><%= button_to 'Delete', "/items/#{item.id}/delete", method: 'get'%></td>
  <% end %>
</table>
<%= link_to "Add an item", new_item_path %>

<h3> Deleted Items </h3>
<table>
  <% @deleted_items.each do |item| %>
    <tr>
      <td><%= link_to item.name, item_path(item) %></td>
      <td><%= button_to 'Restore', "/items/#{item.id}/restore", method: 'put'%></td>
  <% end %>
</table>